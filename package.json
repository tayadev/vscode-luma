{
  "name": "luma",
  "displayName": "Luma",
  "description": "Luma language support for Visual Studio Code",
  "version": "0.0.1",
  "publisher": "tayadev",
  "repository": {
    "type": "git",
    "url": "https://github.com/tayadev/vscode-luma"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "luma",
        "aliases": ["Luma", "luma"],
        "extensions": [".luma"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "luma",
        "scopeName": "source.luma",
        "path": "./syntaxes/luma.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "luma.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
