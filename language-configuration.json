{
  "comments": {
    "lineComment": "--",
    "blockComment": ["--[[", "]]"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "${", "close": "}", "notIn": ["comment", "string"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(if|for|while|fn|match|do)\\b",
      "end": "^\\s*end\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(if|else|for|while|fn|match|do)\\b.*$",
    "decreaseIndentPattern": "^\\s*(end|else)\\b.*$"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
