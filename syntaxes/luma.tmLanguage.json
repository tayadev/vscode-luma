{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Luma",
  "scopeName": "source.luma",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#constants" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.luma",
          "begin": "--\\[\\[",
          "end": "\\]\\]"
        },
        {
          "name": "comment.line.double-dash.luma",
          "match": "--.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.luma",
          "match": "\\b(if|else|for|while|do|end|match|return|break|continue|in|await)\\b"
        },
        {
          "name": "keyword.other.luma",
          "match": "\\b(let|var|fn|import)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.luma",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.luma",
              "match": "\\\\(?:[\"\\\\nrt]|\\$\\{)"
            },
            {
              "name": "meta.embedded.line.luma",
              "begin": "\\$\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.embedded.begin.luma" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.embedded.end.luma" }
              },
              "patterns": [
                { "include": "#keywords" },
                { "include": "#numbers" },
                { "include": "#operators" },
                { "include": "#constants" },
                { "include": "#functions" },
                { "include": "#identifiers" }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hexadecimal.luma",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.luma",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.float.luma",
          "match": "\\b\\d+\\.\\d*(?:[eE][+-]?\\d+)?\\b|\\b\\.\\d+(?:[eE][+-]?\\d+)?\\b|\\b\\d+[eE][+-]?\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.luma",
          "match": "\\b-?\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.luma",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.luma",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.luma",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.assignment.luma",
          "match": "="
        },
        {
          "name": "keyword.operator.spread.luma",
          "match": "\\.\\.\\."
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.luma",
          "match": "\\btrue\\b"
        },
        {
          "name": "constant.language.boolean.false.luma",
          "match": "\\bfalse\\b"
        },
        {
          "name": "constant.language.null.luma",
          "match": "\\bnull\\b"
        },
        {
          "name": "constant.language.infinity.luma",
          "match": "\\bInfinity\\b"
        },
        {
          "name": "constant.language.nan.luma",
          "match": "\\bNaN\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.luma",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.luma",
          "match": "\\b(Number|Boolean|String|Null|Any|List|Table|Result|Option|Promise|Error|TypeError|ValueError|IOError|NetworkError|ParseError)\\b"
        },
        {
          "name": "entity.name.type.luma",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.luma",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
